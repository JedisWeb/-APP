<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_layout_lost_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_layout_lost_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/lost" />

        <TextView
            android:id="@+id/add_layout_lost_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="失物招领"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_layout_seek_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_layout_seek_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/seek" />

        <TextView
            android:id="@+id/add_layout_seek_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寻物启事"
            android:textSize="22dp" />
    </LinearLayout>

</LinearLayout>