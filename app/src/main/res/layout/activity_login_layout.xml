<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/login_layout_head_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_layout_back_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/left_white" />

        <TextView
            android:id="@+id/login_layou_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加或注册账号"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_layout_tel_textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        app:hintTextAppearance="@style/TextInputEditTextHint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_layout_tel_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:theme="@style/LostEditText" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_layout_password_textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        app:hintTextAppearance="@style/TextInputEditTextHint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_layout_password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:theme="@style/LostEditText" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login_layout_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_cicle_shape"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/login_layout_forget_password_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="忘记密码"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/login_layout_register_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="用户注册"
            android:textSize="12dp" />
    </RelativeLayout>
</LinearLayout>